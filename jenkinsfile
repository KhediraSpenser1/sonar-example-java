pipeline {
    agent any
    tools {
        jdk 'JDK'
    }
    stages {
        stage('Checkout github credential') {
            steps {
                git branch: 'master', url: 'https://github.com/KhediraSpenser1/sonar-example-java.git'
            }
        }
        stage('Build'){
            steps {
                sh 'mvn clean install -Dmaven.test.skip=true'
                junit 'target/surefire-reports/**/*.xml'
            }
        }
        stage('SonarQube analysis') {
            steps {
                def sonarqubeScannerHome = tool name : 'SONARQUBE', type: 'hudson.plugins.sonar.SonarRunnerInstallation'
                withCredentials([string(credentialsId: 'sonarqubetoken', variable: 'sonarLogin')]) {
                    sh "${sonarqubeScannerHome}/bin/SONARQUBE -X -Dsonar.host.url=http://34.125.81.46:9000/ -Dsonar.projectKey=sonar-example-java -Dsonar.projectName=sonar-example-java"
                }
            }
        }
        stage("Quality Gate") {
            steps {
                script {
                    def qualitygate = waitForQualityGate()
                    sleep(10)
                    if (qualitygate.status != "OK") {
                        waitForQualityGate abortPipeline: true
                    }
                }
            }
        }
    }
}
